@model AplicacionWebColegio.Data.Models.Estudiante

@{
    ViewBag.Title = "Eliminar Estudiante";
    ViewBag.PanelTitle = "Detalles";
}

<h2>@ViewBag.Title</h2>
<hr />
<h3 class="h3" style="color:red">¿Estás seguro que desea eliminar este registro?</h3>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewBag.PanelTitle</h3>
    </div>
    <div class="panel-body">

        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Matricula)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Matricula)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Nombres)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombres)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Apellidos)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.FechaMatriculacion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaMatriculacion)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Observaciones)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Observaciones)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
                </div>
                <div>

                </div>
            }
        </div>

    </div>
</div>