@model IEnumerable<AplicacionWebColegio.Data.Models.Estudiante>

@{
    ViewBag.Title = "Listado de Estudiantes";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8">
        <p>
            @Html.ActionLink("Registrar Estudiante", "Create", null, new { @class = "btn btn-primary" })
        </p>
    </div>
    <div class="col-md-4">
        <form class="form-inline" action="/" method="get">
            <div class="form-group">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" />
                    <button class="btn input-group-addon">Buscar...</button>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <tr class="active">
        <th>@Html.DisplayNameFor(model => model.Matricula)</th>
        <th>@Html.DisplayNameFor(model => model.FechaMatriculacion)</th>
        <th>@Html.DisplayNameFor(model => model.Nombres)</th>
        <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
        <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
        <th>@Html.DisplayNameFor(model => model.Observaciones)</th>
        <th>Opci&oacute;n</th>
    </tr>
    @foreach (var estudiante in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => estudiante.Matricula)</td>
            <td>@Html.DisplayFor(modelItem => estudiante.FechaMatriculacion)</td>
            <td>@Html.DisplayFor(modelItem => estudiante.Nombres)</td>
            <td> @Html.DisplayFor(modelItem => estudiante.Apellidos)</td>
            <td>@Html.DisplayFor(modelItem => estudiante.FechaNacimiento)</td>
            <td>@Html.DisplayFor(modelItem => estudiante.Observaciones)</td>
            @*<td>
                @Html.ActionLink("Inscripcion", "Inscripcion", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>*@
            <td style="width:15px">
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Inscripción", "Inscripcion", new { id = estudiante.Id }, new { data_modal = "" }) </li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Editar", "Edit", new { id = estudiante.Id }, new { data_modal = "" })</li>
                        <li>@Html.ActionLink("Detalles", "Details", new { id = estudiante.Id }, new { data_modal = "" })</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Eliminar", "Delete", new { id = estudiante.Id }, new { data_modal = "" })</li>
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>
